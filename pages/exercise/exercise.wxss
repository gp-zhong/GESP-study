/**exercise.wxss**/
.container {
  padding: 20rpx;
  background-color: var(--background);
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: var(--text-primary);
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.exercise-list {
  margin-top: 20rpx;
}

.exercise-item {
  margin-bottom: 20rpx;
  transition: transform 0.2s;
}

.exercise-item:active {
  transform: scale(0.98);
}

.exercise-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.exercise-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.exercise-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.exercise-type {
  font-size: 24rpx;
  color: var(--primary-color);
  margin-top: 8rpx;
} 