/* exercise/detail.wxss */
.container {
  padding: 20rpx;
  background-color: var(--background);
  min-height: 100vh;
}

.exercise-header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.description, .example {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.example {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  font-family: monospace;
}

.code-editor {
  width: 100%;
  height: 300rpx;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  font-family: monospace;
  font-size: 28rpx;
}

.submit-btn {
  margin: 30rpx 0;
  width: 100%;
}

.ai-analysis {
  margin-top: 30rpx;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  overflow: hidden;
}

.ai-analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f0f8ff;
  border-bottom: 1px solid var(--border-color);
}

.ai-analysis-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--primary-color);
  display: flex;
  align-items: center;
}

.ai-analysis-title .icon {
  margin-right: 10rpx;
}

.ai-analysis-content {
  padding: 20rpx;
}

.ai-analysis-section {
  margin-bottom: 20rpx;
}

.ai-analysis-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.ai-analysis-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.ai-analysis-code {
  font-family: monospace;
  font-size: 26rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  white-space: pre-wrap;
  color: #333;
} 