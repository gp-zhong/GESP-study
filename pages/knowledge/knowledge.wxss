/**knowledge.wxss**/
.container {
  padding: 30rpx 20rpx;
  background-color: var(--background);
  min-height: 100vh;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: var(--card-background);
  border-radius: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  margin: 0 16rpx;
  font-size: 28rpx;
}

/* 章节样式 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-primary);
}

/* 热门知识点样式 */
.popular-knowledge {
  display: flex;
  overflow-x: auto;
  padding: 10rpx 0;
  margin: 0 -10rpx;
}

.popular-knowledge::-webkit-scrollbar {
  display: none;
}

.popular-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 24rpx;
  background: white;
  border-radius: 24rpx;
  margin-right: 24rpx;
  min-width: 160rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.popular-item:active {
  transform: scale(0.95);
}

.popular-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.popular-title {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 知识点列表样式 */
.knowledge-list {
  background-color: var(--card-background);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.knowledge-item {
  display: flex;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.knowledge-item:last-child {
  border-bottom: none;
}

.knowledge-content {
  flex: 1;
}

.knowledge-title {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  font-weight: 500;
}

.knowledge-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.knowledge-more {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.knowledge-more image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
} 