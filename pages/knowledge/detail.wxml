<!--knowledge/detail.wxml-->
<view class="container">
  <view class="header">
    <view class="title">{{knowledgeDetail.title}}</view>
  </view>
  
  <view class="content">
    <view class="description">{{knowledgeDetail.content}}</view>
    
    <view class="section">
      <view class="section-title">常见的数据结构包括：</view>
      <view class="item-list">
        <view class="item" wx:for="{{knowledgeDetail.items}}" wx:key="name">
          <view class="item-title">• {{item.name}}</view>
          <view class="item-desc">{{item.desc}}</view>
        </view>
      </view>
    </view>
    
    <view class="summary-card">
      <view class="summary-title">学习重点</view>
      <view class="summary-content">{{knowledgeDetail.summary}}</view>
    </view>
    
    <view class="action-buttons">
      <button class="action-btn" bindtap="goToExercises">相关习题</button>
      <button class="action-btn" bindtap="goToExams">查看真题</button>
    </view>
  </view>
</view> 