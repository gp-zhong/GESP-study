<!--pages/exam/exam.wxml-->
<view class="container">
  <view class="header">
    <view class="section-title">GESP真题</view>
  </view>
  
  <view class="filter-section">
    <view class="filter-title">年份</view>
    <view class="tags-container">
      <view 
        class="tag {{activeYear === 'all' ? 'active' : ''}}" 
        bindtap="setActiveYear" 
        data-year="all"
      >全部</view>
      <view 
        class="tag {{activeYear === '2023' ? 'active' : ''}}" 
        bindtap="setActiveYear" 
        data-year="2023"
      >2023</view>
      <view 
        class="tag {{activeYear === '2022' ? 'active' : ''}}" 
        bindtap="setActiveYear" 
        data-year="2022"
      >2022</view>
      <view 
        class="tag {{activeYear === '2021' ? 'active' : ''}}" 
        bindtap="setActiveYear" 
        data-year="2021"
      >2021</view>
    </view>
  </view>

  <view class="filter-section">
    <view class="filter-title">级别</view>
    <view class="tags-container">
      <view 
        class="tag {{activeLevel === 'all' ? 'active' : ''}}" 
        bindtap="setActiveLevel" 
        data-level="all"
      >全部</view>
      <view 
        class="tag {{activeLevel === 'junior' ? 'active' : ''}}" 
        bindtap="setActiveLevel" 
        data-level="junior"
      >初级</view>
      <view 
        class="tag {{activeLevel === 'middle' ? 'active' : ''}}" 
        bindtap="setActiveLevel" 
        data-level="middle"
      >中级</view>
      <view 
        class="tag {{activeLevel === 'senior' ? 'active' : ''}}" 
        bindtap="setActiveLevel" 
        data-level="senior"
      >高级</view>
    </view>
  </view>

  <view class="exam-list">
    <view 
      class="card exam-item" 
      wx:for="{{examList}}" 
      wx:key="id" 
      bindtap="goToDetail" 
      data-id="{{item.id}}"
    >
      <view class="exam-title">{{item.title}}</view>
      <view class="exam-info">考试时间：{{item.time}}</view>
      <view class="view-btn">查看真题</view>
    </view>
  </view>
</view>