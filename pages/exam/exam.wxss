/**exam.wxss**/
.container {
  padding: 20rpx;
  background-color: var(--background);
  min-height: 100vh;
}

.header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.filter-section {
  margin-bottom: 20rpx;
}

.filter-title {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 10rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.tag.active {
  background-color: var(--primary-color);
  color: #fff;
}

.exam-list {
  margin-top: 20rpx;
}

.exam-item {
  padding: 24rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.exam-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.exam-info {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.view-btn {
  display: inline-block;
  padding: 8rpx 20rpx;
  background-color: #f0f8ff;
  color: var(--primary-color);
  font-size: 26rpx;
  border-radius: 24rpx;
} 