/**answer.wxss**/
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.original-post {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.post-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
}

.answer-form {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 120rpx;
}

.answer-input {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.image-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  background: #fafafa;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
}

.upload-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.image-preview image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
  height: 88rpx;
  background: #FFD700;
  color: #333;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.submit-btn.disabled {
  background: #ccc;
  color: #fff;
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 10;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.submit-btn {
  width: 100rpx;
  height: 60rpx;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 讨论信息 */
.discussion-info {
  background-color: rgba(var(--primary-color-rgb), 0.05);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.discussion-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.discussion-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 编辑区域 */
.editor-container {
  padding: 20rpx;
  background-color: #fff;
  min-height: 500rpx;
}

.answer-editor {
  width: 100%;
  min-height: 400rpx;
  padding: 0;
  font-size: 30rpx;
  line-height: 1.6;
  color: var(--text-primary);
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin: 10rpx 0;
}

/* 图片容器 */
.images-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin: 20rpx 0;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-image image {
  width: 24rpx;
  height: 24rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-color);
  margin-top: 20rpx;
}

.tool-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.tool-item image {
  width: 44rpx;
  height: 44rpx;
}

/* AI弹窗 */
.ai-modal, .formula-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.ai-modal-mask, .formula-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
}

.ai-modal-content, .formula-modal-content {
  position: relative;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  z-index: 101;
  max-height: 80vh;
  overflow-y: auto;
}

.ai-modal-header, .formula-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.ai-modal-title, .formula-modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.ai-modal-close, .formula-modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-modal-close image, .formula-modal-close image {
  width: 32rpx;
  height: 32rpx;
}

.ai-prompt-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.ai-suggestion-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.ai-suggestion-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: rgba(var(--primary-color-rgb), 0.1);
  border-radius: 8rpx;
}

.ai-suggestion-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.ai-suggestion-item text {
  font-size: 26rpx;
  color: var(--primary-color);
}

.ai-submit-btn, .formula-submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-top: 20rpx;
}

/* 公式编辑器 */
.formula-editor {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.formula-preview {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  min-height: 100rpx;
}

.preview-title {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.formula-preview-image {
  width: 100%;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 4rpx;
}

.no-preview {
  text-align: center;
  font-size: 26rpx;
  color: var(--text-secondary);
  padding: 20rpx 0;
} 