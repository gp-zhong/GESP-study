/**detail.wxss**/
.container {
  padding: 20rpx;
  background-color: var(--background);
  min-height: 100vh;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.back-btn, .favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image, .favorite-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 讨论内容样式 */
.discussion-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.discussion-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.post-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.discussion-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.discussion-content {
  font-size: 30rpx;
  color: var(--text-primary);
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.discussion-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 24rpx;
}

.discussion-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.discussion-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 6rpx 20rpx;
  background-color: rgba(var(--primary-color-rgb), 0.1);
  color: var(--primary-color);
  font-size: 24rpx;
  border-radius: 30rpx;
}

.discussion-stats {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  color: var(--text-secondary);
  font-size: 26rpx;
}

.stat-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 回答区域样式 */
.answers-section {
  margin-bottom: 120rpx; /* 为底部输入框留出空间 */
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.answers-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.answer-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.answer-item:last-child {
  border-bottom: none;
}

.answer-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.answer-content {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.answer-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.answer-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.answer-actions {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  color: var(--text-secondary);
  font-size: 24rpx;
}

.action-btn image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.no-answers {
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.no-answers image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}

/* 底部输入框 */
.input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-top: 1rpx solid var(--border-color);
}

.input-field {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 120rpx;
  height: 72rpx;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
} 