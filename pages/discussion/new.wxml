<view class="container">
  <view class="form">
    <view class="form-item">
      <input class="title-input" placeholder="请输入标题" bindinput="onTitleInput" value="{{title}}"/>
    </view>
    
    <view class="form-item">
      <textarea class="content-input" placeholder="请详细描述你的问题..." bindinput="onContentInput" value="{{content}}"/>
    </view>
    
    <view class="form-item">
      <view class="image-upload" bindtap="chooseImage" wx:if="{{!imagePath}}">
        <image class="upload-icon" src="/assets/icons/camera.png" mode="aspectFit"></image>
        <text>添加图片</text>
      </view>
      <view class="image-preview" wx:if="{{imagePath}}">
        <image src="{{imagePath}}" mode="aspectFill"></image>
        <view class="delete-btn" catchtap="deleteImage">×</view>
      </view>
    </view>

    <view class="form-item">
      <view class="tag-list">
        <view 
          class="tag {{selectedTag === item ? 'active' : ''}}" 
          wx:for="{{tags}}" 
          wx:key="*this"
          bindtap="selectTag"
          data-tag="{{item}}"
        >{{item}}</view>
      </view>
    </view>
  </view>

  <view class="submit-btn {{canSubmit ? '' : 'disabled'}}" bindtap="submitDiscussion">
    发布讨论
  </view>
</view> 