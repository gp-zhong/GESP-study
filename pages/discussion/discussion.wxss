/**discussion.wxss**/
.container {
  padding: 20rpx;
  background-color: var(--background);
  min-height: 100vh;
  position: relative;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.post-btn {
  width: 40px;
  height: 40px;
  background-color: #1E90FF;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(30, 144, 255, 0.3);
  transition: all 0.3s ease;
}

.post-btn:active {
  transform: scale(0.95);
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.discussion-list {
  margin-bottom: 120rpx; /* 为悬浮按钮腾出空间 */
}

.discussion-item {
  margin-bottom: 20rpx;
}

.discussion-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.post-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.discussion-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.discussion-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.discussion-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  object-fit: cover;
}

.discussion-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.answer-count {
  display: flex;
  align-items: center;
}

.answer-count text {
  margin-left: 6rpx;
}

.view-detail {
  color: var(--primary-color);
}

.floating-btn {
  position: fixed;
  right: 20px;
  bottom: 30px;
  width: 56px;
  height: 56px;
  background-color: #FFD700; /* 修改为金色，区分回答按钮 */
  border-radius: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(255, 215, 0, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.floating-btn:active {
  transform: scale(0.95);
}

.add-icon {
  width: 24px;
  height: 24px;
}

.answer-icon {
  width: 28px;
  height: 28px;
} 