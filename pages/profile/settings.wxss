/**settings.wxss**/
.container {
  padding: 0;
  background-color: var(--background);
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 10;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  flex: 1;
  text-align: center;
}

.settings-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-container {
  margin-bottom: 30rpx;
}

.settings-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-container {
  margin-bottom: 30rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.dropdown-icon {
  width: 32rpx;
  height: 32rpx;
}

.actions {
  padding: 20rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.note-section {
  margin: 40rpx 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.note-title {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 10rpx;
}

.note-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
} 