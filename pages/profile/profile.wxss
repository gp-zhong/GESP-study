/**profile.wxss**/
.container {
  padding: 0;
  background-color: var(--background);
  min-height: 100vh;
}

.header {
  padding: 40rpx 30rpx;
  background-color: var(--primary-color);
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
}

.username {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}

.menu-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: var(--text-secondary);
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-primary);
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
}

.menu-arrow image {
  width: 100%;
  height: 100%;
}

.version-info {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-secondary);
  padding: 30rpx 0;
} 